/*提示框  */

.message {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 80rpx;
  margin-left: -200rpx;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 20px;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  opacity: 0;
}

.fade-in {
  animation: fadeIn 0.3s forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}




