/*jz  */

.jz {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1000;
  margin: 0 auto;
  text-align: center;
}

.jz button[plain] {
  color: #353535;
  border: 1px solid #353535;
  background-color: transparent;
  line-height: 1.5;
  width: 49%;
  display: inline;
}

.nav {
  width: 49%;
  border: 1px solid #353535;
  float: right;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 1.5;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: transparent;
}

.bg-blur {
  position: fixed;
  float: left;
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  /* -webkit-filter: blur(15px);
  -moz-filter: blur(15px);
  -o-filter: blur(15px);
  -ms-filter: blur(15px);
  filter: blur(15px); */
}

