/* pages/mobile/mobile.wxss */

page {
  background-color: #eee;
  height: 100%;
  line-height: 1.6;
  font-size: 30rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.mobileMain {
  height: 100%;
  justify-content: space-between;
  padding: 0 0 30rpx 0;
  box-sizing: border-box;
}

.mbInput {
  background: #fff;
  width: 90%;
  margin-bottom: 30rpx;
  padding: 0 5%;
  margin-top: 30rpx;
  border-top: 2rpx #ececec solid;
  border-bottom: 2rpx #ececec solid;
  position: relative;
}

.tels {
  border-bottom: 2rpx #f5f5f5 solid;
  padding: 25rpx 0;
}

.xing {
  border-bottom: 2rpx #f5f5f5 solid;
  padding: 25rpx 0;
}

.msCode {
  padding: 25rpx 0;
}

.mbBtn {
  width: 90%;
  margin: 40rpx auto 0;
}

.mbBtn button::after {
  border: 0;
}

.mbBtn .vBtn_add {
  border-radius: 100rpx;
  background: #fff;
  border: 2rpx solid #f1f1f1;
}

button.Dtime {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  z-index: 999;
}
