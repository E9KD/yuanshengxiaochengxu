page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/*搜索*/

.search {
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.slide-image{
  width: 100%;
  height:100%;
}
/*搜索结果*/

.search-result {
  flex: auto;
  position: relative;
}

.search-result scroll-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
}

.box {
  overflow: hidden;
  margin: auto;
  margin-top: 20px;
  display:flex;
  flex-flow: row wrap;
}

.result-item {
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.loading {
  padding: 10rpx;
  text-align: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}

.kefu {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  right: 20rpx;
  bottom: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}