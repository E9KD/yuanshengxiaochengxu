page {
  width: 100%;
  height: 100vh;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.positionFixed-video {
  position: fixed;
  left: 0;
  top: 0;
}
.positionFixed {
  position: fixed;
  left: 0;
}
.video{
  width: 100%;
  font-size: 14px;
  text-align: center;
  z-index: 999;
  flex: none;
  align-items: center;
  justify-content: space-between;
  padding: 1rpx;
  background: #f4f4f4;
}
/* 全部 */

/**index.wxss**/

.page-section {
  width: 100vw;
  height: 200px;
  position:relative;
}

.header {
  width: 100%;
  height: 100%;
  background: red;
  position: absolute;
  z-index: 990;
}

.header>image{
  width:100%;
  height:100%;
}

.playbth {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 991;
}

.playbthimg {
  width: 40px;
  height: 40px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -20px; /* 高度的一半 */
  margin-left: -20px; /* 宽度的一半 */
  z-index:999;
}

/*上边文字  */

.coursetwo-top {
  width: 100%;
  padding: 10px 0px;
}

/*左边空白  */

.coursetwo-top-all {
  width: 90vw;
  margin: 0 auto;
}

/* 跟着老师学发音 */

.coursetwo-top .title {
  font-size: .90rem;
  color: #080808;
  padding-bottom: 10px;
  display: block;
  font-weight: bold;
  width: 100%;
  overflow: hidden;
}

/* 15人查询 */

.coursetwo-top-buy {
  width: 100%;
  display: block;
  float: left;
  font-size: 12px;
  color: #a5a5a5;
  overflow: hidden;
  padding-bottom: 17px;
}

/* 价格298 */

.coursetwo-top .price {
  color: #f44d00;
  /* height: 28px; */
  width: 100%;
}

/* 老师介绍部分 */

.teacher {
  overflow: hidden;
  font-size: 16px;
  width: 90vw;
  margin: 0 auto;
  margin-bottom: 15px;
  margin-top: 15px;
}

.teacher .about {
  color: #3e3e3e;
  width: 100%;
  font-weight: bold;
}

/* 赵辉大图 */

.zhaohui {
  width: 100%;
  overflow: hidden;
}

.zhaohui image {
  display: block;
  width: 100%;
  height: 300rpx;
}

/* 课程介绍 */

.coursetwo-about-text {
  overflow: hidden;
  font-size: .80rem;
  width: 90vw;
  margin: 0 auto;
  margin-bottom: 15px;
  margin-top: 15px;
  color:#B2B2AD;
}
.coursetwo-about-text-one{
  float:left;
  width:100%;
  overflow:hidden;
  padding:5px;
  border-bottom:1px solid #eee;
  line-height:30px;
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.coursetwo-about-text .coursetwo-about {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #3e3e3e;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  font-weight: bold;
}

.coursetwo-about-text-title {
  width: 100%;
  font-size: 26rpx;
  margin-top: 70rpx;
  color: #3e3e3e;
  margin-bottom: 24rpx;
  font-weight: bold;
  overflow: hidden;
  height: 57rpx;
}

.coursetwo-about-text-span {
  display: block;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #7f7f7f;
  margin-bottom: 50rpx;
  padding-top:15rpx;
}

/* 发育规律 */

.rule {
  overflow: hidden;
  width: 90vw;
  margin: 0 auto;
  margin-bottom: 15px;
  margin-top: 15px;
}

.rule image {
  display: block;
  width: 100%;
  overflow: hidden;
}

.backhome {
  position: fixed;
  width: 100%;
  background-color: #1b1a20;
  height: 40px;
}

.share-give {
  float: left;
  width: 70%;
}

button {
  line-height: 14px;
  background-color: #1b1a20;
}

button-hover {
  line-height: 14px;
  background-color: #1b1a20;
}

.share {
  text-align: center;
  float: left;
  width: 50%;
  color: #fff;
  font-size: 14px;
  display:flex;
  justify-content:flex-start;
  align-items:center;
  line-height:40px;
  background:none !important;
}
.share>image{
  width:20px;
  height:20px;
  margin-right:10px;
}


.give {
  text-align: left;
  float: right;
  width: 50%;
  color: #fff;
  font-size: 14px;
  padding: 13px 0px 13px 0px;
}

.buy {
  float: right;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 14px;
  padding: 13px 0px 13px 0px;
  line-height: 14px;
  background: #f2892c;
}

/*选项卡  */

.nav {
  width: 100%;
  font-size: 14px;
  text-align: center;
  z-index: 999;
  height: 50px;
  flex: none;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  padding: 1rpx;
  background: #f4f4f4;
}

.off {
  box-sizing: border-box;
  border-bottom: 2px solid #fff;
}

.on {
  color: #f2892c;
  border-bottom: 2px solid #f2892c;
  box-sizing: border-box;
}

/*搜索结果*/

.search {
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
  min-height: 200px;
}

.search-result {
  flex: auto;
  position: relative;
}

.search-result scroll-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
}

.result-item {
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  border-bottom: 2rpx solid #e5e5e5;
}

.layout {
  width: 100%;
  height: 100vh;
}

.teacher_image{
  width:220rpx;
  height:220rpx;
  background:url('') no-repeat center top;
  border-radius:90%;
  background-size:cover;
  display:block;
  margin:0 auto;
}

.cf-bg {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}

