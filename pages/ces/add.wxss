page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 0;
  margin: 0;
}
.IndexHome {
  width: 100%;
  display: block;
  background-color: #004299;
  height: 500rpx;
  overflow: hidden;
  text-align: center;
  position: relative;
}

.div1 {
  position: relative;
}

.div1:after {
  position: absolute;
  bottom: 0;
  width: 0;
  height: 0;
  left: 50%;
  margin-left: -5px;
  content: " ";
  border-bottom: 5px solid #fff;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
}

.div1:before {
  position: absolute;
  top: -5px;
  width: 0;
  height: 0;
  left: 50%;
  margin-left: -5px;
  content: " ";
  border-bottom: 5px solid #fff;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
}

.IndexList {
  width: 100%;
  display: block;
  margin-top: 40rpx;
}

.s {
  width: 150px;
  height: 80px;
  top: 25%;
  left: 0;
  bottom: 0;
  right: 0;
  /* border:1px solid pink; */
  position: absolute;
}

.sx {
  text-align: center;
  margin: 0 auto;
  width: 150px;
  height: 60px;
  font-size: 130rpx;
  /* border:1px solid blue; */
  top: -20px;
  position: absolute;
}

.m {
  text-align: center;
  margin: 0 auto;
  width: 150px;
  height: 20px;
