page {
  /* background-color: #EEEEEE; */
  background: linear-gradient(180deg, rgba(130,140,170,0.6),rgba(48,103,136,0.6));
}

.insinfo {
  width: 63%;
  margin: 0 auto;
}

/*表单  */

label {
  display: inline-block;
}

.label1 {
  margin-top:8%;
  min-width: 50%;
  text-align: center;
}

.lar-r {
  margin-top: 0.77em;
  margin-bottom: 0.3em;
  /* padding-left:15px; */
  padding-right: 15px;
  color: #999;
  font-size: 14px;
}

.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list:first-child {
  margin-top: 20rpx;
}

.form-list::before, .form-list::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e3e3e3;
}

.form-list::before {
  top: 0;
}

.form-list::after {
  bottom: 0;
}

.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 40rpx;
  background-color: #fff;
}

.form-item::before {
  content: '';
  display: block;
  position: absolute;
  z-index: 99;
  left: 0;
  top: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e3e3e3;
}

.form-item-hd {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-bd {
  flex: 1;
  height: 60rpx;
}

input, .input {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 0 15rpx;
  border-radius: 20rpx;
  color: #999;
}

switch {
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-right: -10rpx;
  margin-top: -16px;
  transform: scale(0.9);
  transform-origin: right center;
}

.input-placeholder {
  background-color: #FFF;
  border-radius: 20rpx;
}

.save-btn {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #2ea9df;
  border-radius: 6rpx;
  color: #fff;
}

.save-btn:active {
  background-color: #369dc9;
}

.hidden {
  opacity: 0;
}
.b-tp {
  margin-top:8%;
}
