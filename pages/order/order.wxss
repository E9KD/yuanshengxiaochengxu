page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.item {
  padding: 10px;
  height: auto;
  background: #fff;
  border-radius: 5px;
  margin-top: 5px;
  float: right;
  font-size: 60%;
  margin: 0 auto;
  background:#eeedf2;
  overflow: hidden;
}
/*搜索*/  
.search{  
  flex: auto;  
  display: flex;  
  flex-direction: column;  
  background: #fff;  
}  
.search-bar{  
  flex: none;  
  display: flex;  
  align-items: center;  
  justify-content: space-between;  
  padding: 20rpx;  
  background: #f4f4f4;  
}   
/*搜索结果*/  
.search-result{  
  flex: auto;  
  position: relative;  
}  
.search-result scroll-view{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
}  
.on {
  background: #f08519;
  color: #fff;
  border: 1px solid #f08519;
  box-sizing: border-box;
}
.off{
  background: #fff;
  color: #000;
  border: 1px solid #f08519;
  box-sizing: border-box;
}

